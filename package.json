{
  
  "name": "stomping-ground",
  "version": "1.0.0",
  "description": "package.json file for heroku deployment",
  "main": "server.js",
  "scripts": {
    "client": "npm start --prefix client",
    "start": "npm start --prefix server",
    "server": "npm nodemon server --prefix server",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm install --prefix server && npm run build --prefix client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/orest-cloud/Stomping_Ground.git"
  },
  "author": "Orest Szopiak",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/orest-cloud/Stomping_Ground/issues"
  },
  "homepage": "https://github.com/orest-cloud/Stomping_Ground#readme",
  "devDependencies": {
    "concurrently": "^6.1.0"
  }
}
